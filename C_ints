                                                             // Task // 
                                                
                                                
                                                Count all the commets bellow, and then inside the main() method,
                                                declare a varibale called numComments, that holds as many comments there is bellow; 
                                          
                                          
                                                //This is the class declaration
                                                public class CountComment {
                                                
                                                  //This is the main method that runs when you compile
                                                  public static void main(String[] arg) {
                                                  
                                                  //This is where you will define your variable
                                                  
                                                  //This is where you will print your variable
                                                  System.out.println)numComments); 
                                                  }
                                                  
                                                  //This is the end of the class
                                                } 
                                                  //this is outside the class
                                                  
                                                ----------------------------------------
                                                
                                               - Correct Awnser: 
                                                
                                                //This is the class declaration
                                                public class CountComment {
                                                
                                                  //This is the main method that runs when you compile
                                                  public static void main(String[] arg) {
                                                  
                                                  //This is where you will define your variable
                                                   int numComments = 6;
                                                  
                                                  //This is where you will print your variable
                                                  System.out.println)numComments); 
                                                  }
                                                  
                                                  //This is the end of the class
                                                } 
                                                  //this is outside the class
                                              
                                                  
                                               
                                                
                                    
